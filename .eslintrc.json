{
  "extends": [
    "standard",
    "plugin:react/recommended",
    "plugin:react/jsx-runtime"
  ],
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "rules": {
    "react/prop-types": "off",
    "multiline-ternary": ["error", "never"],
    "indent": ["error", 2],
    "no-case-declarations" :"off"
  },
  "settings": {
    "react": {
      "version": "detect"
    }
  }
}